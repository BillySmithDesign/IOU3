datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Debt {
  id              Int      @id @default(autoincrement())
  friendName      String
  telegramUsername String
  exchangeDate    DateTime
  totalOwed       Float
  dueDate         DateTime
  partialPayments Json     @default("[]")
}
